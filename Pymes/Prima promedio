SELECT 
    SUM(PRIMA_EMITIDA) AS TOTAL_PRIMA,
    COUNT(DISTINCT NUMERO_POLIZA) AS CANTIDAD_POLIZAS,
    SAFE_DIVIDE(SUM(PRIMA_EMITIDA), COUNT(DISTINCT NUMERO_POLIZA)) AS PRIMA_PROMEDIO
FROM `sb-sandbox-actuaria-generales.sandbox_patrimonial.t_polizas_riesgos_endosos_EMPRESAS`
WHERE 
    CODIGO_PRODUCTO IN (777, 778)
    AND FECHA_EMISION_ENDOSO BETWEEN '2025-01-01' AND '2025-11-30'
    AND NUMERO_ENDOSO = 0;
